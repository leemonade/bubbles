{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "2. Build bubbles",
      "type": "shell",
      "group": "build",
      "command": "yarn",
      "args": ["build", "${input:componentType}"],
      "options": {
        "cwd": "${workspaceFolder}/"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "3. Launch frontend",
      "type": "shell",
      "group": "build",
      "command": "yarn",
      "args": ["front:dev"],
      "options": {
        "cwd": "./../leemons/apps/dev"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Bubbles cycle",
      "type": "shell",
      "group": "build",
      "command": "echo Ended!",
      "dependsOrder": "sequence",
      "dependsOn": ["2. Build bubbles", "3. Launch frontend"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "componentType",
      "description": "What type of component do you want to create?",
      "options": [
        "--all",
        "--calendars",
        "--components",
        "--editors",
        "--extras",
        "--icons",
        "--leemons",
        "--notifications"
      ],
      "default": "component"
    }
  ]
}
